<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- To save as <CATALINA_HOME>\webapps\helloservlet\WEB-INF\web.xml -->

    <servlet>
        <servlet-name>EnrollmentServlet</servlet-name>
        <servlet-class>EnrollmentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ReceiveTemplateServlet</servlet-name>
        <servlet-class>ReceiveTemplateServlet</servlet-class>
    </servlet>

    <!-- Note: All <servlet> elements MUST be grouped together and
          placed IN FRONT of the <servlet-mapping> elements -->

    <servlet-mapping>
        <servlet-name>EnrollmentServlet</servlet-name>
        <url-pattern>/enrollment</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ReceiveTemplateServlet</servlet-name>
        <url-pattern>/receiveTemplateServlet</url-pattern>
    </servlet-mapping>
</web-app>